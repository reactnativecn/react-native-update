{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "lib": ["es2016", "dom"],
    "moduleResolution": "node"
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "Example"]
}
